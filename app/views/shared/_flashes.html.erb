<% if flash[flash_type] %>
  <div data-controller="flashes" class="hidden absolute w-full <%= background %> py-2 px-4">
    <div class="flex items-center">
      <div class="flex-shrink-0">
        <%= render "shared/flash_#{flash_type}_icon", color: text_color %>
      </div>
      <div class="ml-3">
        <p class="text-sm leading-5 font-medium <%= text_color %>"><%= flash[flash_type] %></p>
      </div>
      <div class="ml-auto pl-3">
        <div class="-mx-1.5 -my-1">
          <button data-action="click->flashes#close" class="inline-flex rounded-md p-1 <%= text_color %> hover:<%= background_modifier %> focus:outline-none focus:<%= background_modifier %>" aria-label="Dismiss">
            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>
