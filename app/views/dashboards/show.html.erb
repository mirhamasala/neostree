<h1 class="page-title"><%= t('.page_title') %></h1>

<div class="mb-6">
  <%= link_to "Log out", destroy_user_session_path, method: :delete %>
</div>

<div class="mb-6">
  <h2 class="subheading"><%= t('.subheading_units') %></h2>
  <ul class="mb-4">
    <% @units.each do |unit| %>
      <li>
        <%= unit.name %>
        <%= link_to "delete", unit_path(unit), method: :delete %>
      </li>
    <% end %>
  </ul>
  <%= link_to t('.link_unit'), new_unit_path %>
</div>

<div>
  <h2 class="subheading"><%= t('.subheading_ingredients') %></h2>
  <ul class="mb-4">
    <% @ingredients.each do |ingredient| %>
      <li>
        <%= ingredient.name %>
        <%= link_to "delete", ingredient_path(ingredient), method: :delete %>
      </li>
    <% end %>
  </ul>
  <%= link_to t('.link_ingredient'), new_ingredient_path %>
</div>
