<div class="flex flex-col justify-between h-full">
  <%= image_tag "marieke_verdenius_1.png", class: "md:hidden h-96 object-cover object-center" %>
  <section class="flex justify-between py-6 px-4 sm:py-12 sm:px-12 xl:px-16">
    <div class="hidden md:flex md:flex-col lg:flex-row lg:h-128">
      <%= image_tag "marieke_verdenius_2.png", class: "lg:w-1/2 object-cover object-center" %>
      <%= image_tag "marieke_verdenius_1.png", class: "hidden lg:block lg:w-1/2 object-cover object-center" %>
    </div>
    <div class="md:self-center md:pl-12 xl:pl-16">
      <h1 class="heading"><%= t('.heading') %></h1>
      <p class="mb-4"><%= t('.intro_pt_1') %></p>
      <p><%= t('.intro_pt_2') %></p>
    </div>
  </section>
  <section class="flex-grow sm:flex sm:justify-between sm:h-128 bg-stone-100">
    <div class="flex flex-col justify-center py-6 px-4 sm:py-12 sm:px-12 xl:px-16">
      <h2 class="subheading"><%= t('.subheading_featuring') %></h2>
      <%= link_to user_path("silviafalcomer"), class: "mb-6" do %>
        <h3 class="subheading subheading--base">Silvia Falcomer</h3>
        <p><%= t('.about_1') %></p>
      <% end %>
      <%= link_to user_path("arjen") do %>
        <h3 class="subheading subheading--base">Arjen Calter</h3>
        <p><%= t('.about_2') %></p>
      <% end %>
    </div>
    <%= image_tag "marieke_verdenius_3.png", class:"sm:w-6/12 lg:w-10/12 xl:11/12 max-h-full object-cover object-bottom" %>
  </section>
</div>
