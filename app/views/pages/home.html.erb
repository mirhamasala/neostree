<div class="flex flex-col justify-between h-full">
  <section>
    <%= cl_image_tag("homepage/102F9E85-1305-4EBC-9B49-9E6D8B01F25E-1280_twerjy.jpg", quality: "auto", class: "w-full h-96 max-h-full md:hidden") %>
    <div class="flex py-8 px-4 sm:py-12 sm:px-12 xl:px-16">
      <div class="hidden md:block lg:flex lg:h-128">
        <%= cl_image_tag("homepage/9FBDF673-D0CB-43A5-9B2E-2916ED521C85-1280_bmancd.jpg", quality: "auto", class: "lg:w-1/2") %>
        <%= cl_image_tag("homepage/102F9E85-1305-4EBC-9B49-9E6D8B01F25E-1280_twerjy.jpg", quality: "auto", class: "hidden lg:block lg:w-1/2") %>
      </div>
      <div class="md:self-center md:pl-12 xl:pl-16">
        <h1 class="heading"><%= t('.heading') %></h1>
        <p class="mb-6 leading-7"><%= t('.intro') %></p>
        <p class="font-medium">
          <%= t('.intro_sign_up_html',
            href: link_to(t('.intro_sign_up_href'), new_user_registration_path,
            class: "text-highlight"))
          %>
        </p>
      </div>
    </div>
  </section>
  <section class="flex-grow bg-stone-100">
    <div class="flex flex-col sm:flex-row h-full">
      <div class="flex flex-col justify-center py-8 px-4 sm:py-12 sm:px-12 xl:px-16">
        <h2 class="subheading"><%= t('.subheading_featuring') %></h2>
        <%= link_to user_path("silviafalcomer") do %>
          <h3 class="subheading subheading--base inline-block border-solid border-b-2 border-sea-100">Silvia Falcomer</h3>
          <p class="mt-2 leading-7">
            <span><%= t('.about_silvia') %></span>
            <i class="fal fa-angle-double-right text-xl text-sea-400 align-text-top"></i>
          </p>
        <% end %>
      </div>
      <%= cl_image_tag("homepage/0FC61C66-09AE-406B-B720-D64D404DA041-1280_ucfram.jpg", quality: "auto", class: "flex-grow sm:w-6/12 lg:w-8/12") %>
    </div>
  </section>
</div>
