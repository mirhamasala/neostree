      <h2 class="subheading"><%= t('.subheading_featuring') %></h2>
      <%= link_to user_path("silviafalcomer") do %>
        <h3 class="subheading subheading--base text-highlight inline-block">Silvia Falcomer</h3>
        <p>
          <span><%= t('.about_silvia') %></span>
          <i class="fal fa-angle-double-right text-sea-400 text-xl align-text-top"></i>
        </p>
      <% end %>
    </div>
    <%= cl_image_tag("homepage/0FC61C66-09AE-406B-B720-D64D404DA041-1280_ucfram.jpg", class: "flex-grow sm:w-6/12 lg:w-8/12") %>
  </section>
</div>
