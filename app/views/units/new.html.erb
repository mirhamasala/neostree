<h2 class="heading heading--form"><%= t('.heading') %></h2>

<%= form_with model: @unit, class: "form" do |f| %>
  <div class="form__main">
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :fractionable %>
      <%= f.check_box :fractionable %>
    </div>
  </div>

  <%= f.submit %>
<% end %>
