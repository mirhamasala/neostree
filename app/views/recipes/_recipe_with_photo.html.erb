<%= link_to recipe_path(recipe) do %>
  <div class="card">
    <div class="card__image-wrapper">
      <%= cl_image_tag recipe.photo.key, height: 768, quality: :auto, crop: :fill, class: "card__image" %>
    </div>
    <div class="card__main">
      <p class="card__title"><%= recipe.title.titleize %></p>
    </div>
  </div>
<% end %>
