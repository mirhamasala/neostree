<%= form_with model: @recipe, class: "form" do |f| %>
  <h2 class="form__header">Add a new recipe</h2>

  <div class="form__grid">
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :link %>
      <%= f.text_field :link %>
    </div>
  </div>

  <%= f.submit %>
<% end %>
